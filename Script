local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Pingxxhub",
    LoadingTitle = "Dollarpingxx",
    LoadingSubtitle = "Dont beat yo shit tonight",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "Pingxxhub",
        FileName = "PingxxSettings"
    },
    KeySystem = true,
    KeySettings = {
        Title = "dollarshub",
        Subtitle = "Key System",
        Note = "Get the key from: https://lootdest.org/s?Pem9vPok",
        FileName = "dollarpingxx",
        SaveKey = false,
        GrabKeyFromSite = true,
        Key = {"https://pastebin.com/raw/v8YWfgAA"}
    }
})

Rayfield:Notify({
    Title = "I will know if you beat",
    Content = "Be the best",
    Duration = 5,
    Image = 4483362458,
})

local Tab = Window:CreateTab("Main", 4483362458)

-- Noclip Button
Tab:CreateButton({
    Name = "Noclip",
    Callback = function()
        local lp = game.Players.LocalPlayer
        local char = lp.Character
        if not char then return end
        _G.Noclip = not _G.Noclip
        if _G.Noclip then
            game:GetService("RunService").Stepped:Connect(function()
                if char and char:FindFirstChild("HumanoidRootPart") then
                    char.HumanoidRootPart.CanCollide = false
                    for _, part in ipairs(char:GetChildren()) do
                        if part:IsA("BasePart") then
                            part.CanCollide = false
                        end
                    end
                end
            end)
        else
            for _, part in ipairs(char:GetChildren()) do
                if part:IsA("BasePart") then
                    part.CanCollide = true
                end
            end
        end
    end,
})

-- Infinite Yield Button
Tab:CreateButton({
    Name = "Infinite Yield",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
    end,
})

-- Fullbright Button
local isFullbright = false
Tab:CreateButton({
    Name = "Fullbright",
    Callback = function()
        isFullbright = not isFullbright
        if isFullbright then
            game.Lighting.Brightness = 2
            game.Lighting.GlobalShadows = false
            game.Lighting.OutdoorAmbient = Color3.fromRGB(255, 255, 255)
            game.Lighting.Ambient = Color3.fromRGB(255, 255, 255)
        else
            game.Lighting.Brightness = 1
            game.Lighting.GlobalShadows = true
            game.Lighting.OutdoorAmbient = Color3.fromRGB(128, 128, 128)
            game.Lighting.Ambient = Color3.fromRGB(128, 128, 128)
        end
    end,
})

-- Uniform Hitbox
Tab:CreateButton({
    Name = "Uniform Hitbox (Same Size for All Players)",
    Callback = function()
        local standardSize = Vector3.new(2, 6, 2)
        for _, player in ipairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer and player.Character then
                for _, part in ipairs(player.Character:GetChildren()) do
                    if part:IsA("BasePart") then
                        part.Size = standardSize
                    end
                end
            end
        end
    end,
})

-- Kill Aura
Tab:CreateButton({
    Name = "Kill Aura",
    Callback = function()
        local lp = game.Players.LocalPlayer
        local char = lp.Character
        if not char then return end
        local damageRadius = 15
        local damageAmount = 50
        game:GetService("RunService").Heartbeat:Connect(function()
            if char and char:FindFirstChild("HumanoidRootPart") then
                for _, player in ipairs(game.Players:GetPlayers()) do
                    if player ~= lp and player.Character then
                        local targetChar = player.Character
                        local targetHumanoid = targetChar:FindFirstChild("Humanoid")
                        local targetHRP = targetChar:FindFirstChild("HumanoidRootPart")
                        if targetHRP and targetHumanoid and (targetHRP.Position - char.HumanoidRootPart.Position).Magnitude <= damageRadius then
                            targetHumanoid:TakeDamage(damageAmount)
                        end
                    end
                end
            end
        end)
    end,
})

-- Troll Tab with Explode and Explode 2 Buttons
local TrollTab = Window:CreateTab("Troll", 4483362458)

-- Explode Button in Troll Tab
TrollTab:CreateButton({
    Name = "Explode",
    Callback = function()
        local lp = game.Players.LocalPlayer
        local char = lp.Character
        if not char then return end
        
        -- Create explosion effect at player's position
        local explosion = Instance.new("Explosion")
        explosion.Position = char.HumanoidRootPart.Position
        explosion.BlastRadius = 10
        explosion.BlastPressure = 1000
        explosion.ExplosionType = Enum.ExplosionType.NoCraters
        explosion.Parent = workspace
        
        -- Optional: Destroy the player's character after explosion
        char:BreakJoints()
    end,
})

-- Explode 2 Button to fling character (with Toggle functionality)
local isFlinging = false
TrollTab:CreateButton({
    Name = "Explode 2 (Fling) - Toggle",
    Callback = function()
        local lp = game.Players.LocalPlayer
        local char = lp.Character
        if not char then return end

        isFlinging = not isFlinging  -- Toggle fling state
        
        if isFlinging then
            -- Apply force to fling the player's character continuously
            local bodyVelocity = Instance.new("BodyVelocity")
            bodyVelocity.MaxForce = Vector3.new(100000, 100000, 100000)  -- High force for fling
            bodyVelocity.Velocity = Vector3.new(math.random(-500, 500), math.random(500, 1000), math.random(-500, 500))  -- Random fling direction
            bodyVelocity.Parent = char:FindFirstChild("HumanoidRootPart")  -- Apply to HumanoidRootPart

            -- Loop the fling by continually applying the force
            local flingLoop = game:GetService("RunService").Heartbeat:Connect(function()
                if isFlinging then
                    bodyVelocity.Velocity = Vector3.new(math.random(-500, 500), math.random(500, 1000), math.random(-500, 500))
                else
                    bodyVelocity:Destroy()  -- Remove the BodyVelocity when toggled off
                    flingLoop:Disconnect()  -- Stop the loop
                end
            end)
        else
            -- Stop flinging and clean up
            isFlinging = false
        end
    end,
})

-- Misc Tab (Empty)
Window:CreateTab("Misc", 4483362458)
